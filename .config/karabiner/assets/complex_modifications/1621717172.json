{
  "title": "personal config",
  "rules": [
    {
      "description": "Change caps_lock to command+control+option.",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "right_command",
              "modifiers": ["right_control", "right_option"]
            }
          ]
        }
      ]
    },
    {
      "description": "Change shift to escape if alone",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "optional": ["any"]
            }
          },
          "to": [
            {
              "key_code": "left_shift"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "escape"
            }
          ]
        }
      ]
    },
    {
      "description": "caps_lock + o == control+b",
      "manipulators": [
        {
          "from": {
            "key_code": "o",
            "modifiers": {
              "mandatory": ["right_command", "right_control", "right_option"]
            }
          },
          "to": [
            {
              "key_code": "b",
              "modifiers": ["left_control"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "caps_lock + i/j/k/l == vim directional Keys",
      "manipulators": [
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["right_command", "right_control", "right_option"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["right_command", "right_control", "right_option"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["right_command", "right_control", "right_option"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["right_command", "right_control", "right_option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "left option + i/j/k/l == vim directional Keys + option",
      "manipulators": [
        {
          "from": {
            "key_code": "k",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "up_arrow",
              "modifiers": ["right_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "left_arrow",
              "modifiers": ["right_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "j",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "down_arrow",
              "modifiers": ["right_option"]
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "l",
            "modifiers": {
              "mandatory": ["left_option"]
            }
          },
          "to": [
            {
              "key_code": "right_arrow",
              "modifiers": ["right_option"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "caps_lock + space == space",
      "manipulators": [
        {
          "from": {
            "key_code": "spacebar",
            "modifiers": {
              "mandatory": ["right_command", "right_control", "right_option"]
            }
          },
          "to": [
            {
              "key_code": "spacebar"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "caps_lock + ; == enter",
      "manipulators": [
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["right_command", "right_control", "right_option"]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "shift + caps_lock + ; == shift + enter",
      "manipulators": [
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": [
                "right_command",
                "right_control",
                "right_option",
                "left_shift"
              ]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter",
              "modifiers": ["left_shift"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "left command + ; == command + enter",
      "manipulators": [
        {
          "from": {
            "key_code": "semicolon",
            "modifiers": {
              "mandatory": ["left_command"]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter",
              "modifiers": ["right_command"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "caps_lock + n == delete",
      "manipulators": [
        {
          "from": {
            "key_code": "n",
            "modifiers": {
              "mandatory": ["right_command", "right_control", "right_option"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "caps_lock + m == delete",
      "manipulators": [
        {
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": ["right_command", "right_control", "right_option"]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Toggle caps_lock by pressing left_shift then right_shift",
      "manipulators": [
        {
          "from": {
            "key_code": "left_shift",
            "modifiers": {
              "mandatory": ["right_shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "left_shift"
            }
          ],
          "type": "basic"
        },
        {
          "from": {
            "key_code": "right_shift",
            "modifiers": {
              "mandatory": ["left_shift"],
              "optional": ["caps_lock"]
            }
          },
          "to": [
            {
              "key_code": "caps_lock"
            }
          ],
          "to_if_alone": [
            {
              "key_code": "right_shift"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
